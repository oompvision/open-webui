# AlumniHuddle AI Chat - Production Environment Variables
# Copy this file to .env and fill in the values

# =============================================================================
# REQUIRED: API Keys
# =============================================================================

# Anthropic API Key for Claude models
ANTHROPIC_API_KEY=sk-ant-api03-xxxxx

# Pipelines API Key (internal communication between services)
# Generate a secure random string for production
PIPELINES_API_KEY=your-secure-pipelines-key

# =============================================================================
# REQUIRED: Database (Supabase)
# =============================================================================

# Supabase PostgreSQL connection string (use Session Pooler for IPv4)
# Format: postgresql://postgres.[project-ref]:[password]@[host]:5432/postgres
DATABASE_URL=postgresql://postgres.xxxxx:password@aws-1-us-east-1.pooler.supabase.com:5432/postgres

# Supabase project URL and keys (for SSO integration)
SUPABASE_URL=https://xxxxx.supabase.co
SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.xxxxx
SUPABASE_SERVICE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.xxxxx

# =============================================================================
# REQUIRED: Security
# =============================================================================

# Secret key for JWT signing - generate a secure random string
# Example: openssl rand -hex 32
WEBUI_SECRET_KEY=your-secure-secret-key-minimum-32-chars

# =============================================================================
# OPTIONAL: Deployment Configuration
# =============================================================================

# Port for the web service (Railway will override this)
PORT=8080

# Base domain for multi-tenancy (subdomain detection)
BASE_DOMAIN=alumnihuddle.com

# CORS - allowed origins for cross-origin requests
# Include your main Vercel app URL
CORS_ALLOW_ORIGIN=https://alumnihuddle.vercel.app,https://www.alumnihuddle.com
